<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.giftgenius.RegistervActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_drawer_resrioptr_show"
        android:layout_width="match_parent"
        android:background="#fd6563"
        android:layout_height="?actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_drawer_resritor_actionbar_back"
                android:layout_width="33dp"
                android:background="@drawable/back"
                android:layout_centerVertical="true"
                android:layout_height="24dp"
                android:onClick="onClick"
                />
            <TextView
                android:id="@+id/tv_drawer_resrioptr_actionbar_content"
                android:layout_width="100dp"
                android:text="会员注册"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/et_drawer_resrioptr_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/toolbar_drawer_resrioptr_show"
        android:background="@android:drawable/editbox_background"
        android:hint="请输入11为的手机号 " />
    <EditText
        android:id="@+id/et_drawer_resrioptr_pwd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="请输入6到16为字符或者数字密码 "
        android:background="@android:drawable/editbox_background"
        android:layout_marginTop="5dp"
        android:layout_below="@id/et_drawer_resrioptr_phone" />
    <EditText
        android:id="@+id/et_drawer_resrioptr_nick"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="请输入不少于9个字符的名称 "
        android:background="@android:drawable/editbox_background"
        android:layout_marginTop="5dp"
        android:layout_below="@id/et_drawer_resrioptr_pwd" />
    <Button
        android:id="@+id/btn_drawer_resrioptr_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="注册"
        android:background="#fd6563"
        android:layout_marginTop="5dp"
        android:layout_below="@id/et_drawer_resrioptr_nick"
        android:onClick="onClick"/>

</RelativeLayout>
