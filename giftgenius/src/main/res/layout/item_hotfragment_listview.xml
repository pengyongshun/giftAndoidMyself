<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_item_hotfragment_listview_icon"
            android:layout_width="120dp"
            android:layout_centerVertical="true"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/iv_item_hotfragment_listview_icon"
            android:layout_alignBaseline="@id/iv_item_hotfragment_listview_icon"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_hotfragment_listview_gname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="黑暗王座"


                android:gravity="center_vertical"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_item_hotfragment_listview_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="爱心礼包"
                android:gravity="center_vertical"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tv_item_hotfragment_listview_size"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="剩余 0    时间：2016-02-25"
                android:textSize="15dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_item_hotfragment_listview_count"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="1423人在玩"
            android:textColor="#fd6563"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            />
</RelativeLayout>