<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.giftgenius.GiftDetalHeaderActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_giftdetal_show"
        android:layout_width="match_parent"
        android:background="#fd6563"
        android:layout_height="?actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_giftdetal_actionbar_back"
                android:layout_width="33dp"
                android:background="@drawable/back"
                android:layout_centerVertical="true"
                android:layout_height="24dp"
                android:onClick="onClick"
                />
            <TextView
                android:id="@+id/tv_giftdetal_actionbar_content"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_giftdetal_actionbar_shape"
                android:layout_width="34dp"
                android:layout_gravity="right"
                android:textSize="20dp"
                android:background="@drawable/shape_giftdetal_gift"
                android:onClick="onClick"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_height="34dp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/rl_giftdetal_header_header"
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar_giftdetal_show"
        android:background="@drawable/lb_bg"
        android:layout_height="216dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_activity_gifts_show"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/x_bg"
            app:civ_border_width="6dp"
            android:layout_centerInParent="true"
            app:civ_border_color="#fd6563"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tv_activity_gifts_date"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="有效期：2016-06-22 "
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/tv_activity_gifts_count"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:text="礼包剩余：0"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_giftdetal_header_header"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:id="@+id/rl_giftdetal_header_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_giftdetal_header_gift_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="礼包说明"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>
            <View
                android:id="@+id/view_giftdetal_header_gift"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:background="#36c77b"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_giftdetal_header_gift_title"
                />
            <TextView
                android:id="@+id/tv_giftdetal_header_gift_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20砖石"
                android:textSize="15dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/view_giftdetal_header_gift" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@id/rl_giftdetal_header_gift">
            <TextView
                android:id="@+id/tv_giftdetal_header_change_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="对换方式"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>
            <View
                android:id="@+id/view_giftdetal_header_change"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:background="#36c77b"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_giftdetal_header_change_title"
                />
            <TextView
                android:id="@+id/tv_giftdetal_header_change_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20砖石"
                android:textSize="15dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/view_giftdetal_header_change" />

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_giftdetal_get"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="立即领取"
            android:layout_centerInParent="true"
            android:background="@drawable/shap_gift_detial_head_btn"
            android:onClick="onClick"/>
        <ImageView
            android:id="@+id/iv_giftdetal_header_gift"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/my_gift_green"/>
    </RelativeLayout>


</RelativeLayout>
